                                    <input style="width: 50%; margin-right: 8px;" type="text" id="email"
                                           onchange="{!c.onChangeEmail}" />
                                    @
                                    <aura:renderIf isTrue="{!v.emailSelf == false}">
                                        <select style="width: 46%; padding: 14px 16px; margin-left: 8px;"
                                                onchange="{!c.onChangeEmailProvider}">
                                            <option value="naver.com">naver.com</option>
                                            <option value="gmail.com">gmail.com</option>
                                            <option value="daum.net">daum.net</option>
