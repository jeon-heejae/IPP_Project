                                                    value="{!v.JobPositionObj.fm_subjectEng__c}" variant="label-inline" readonly="true"
                                                    tabindex="-1" />
                                <label for="applyApplicant">
                                    <abbr lightning-input_input="" title="required" class="slds-required">*</abbr>
                                    Name</label>
                                <lightning:inputField aura:id="applyApplicant" fieldName="Applicant__c"
                                                      value="{!v.Applicant}" variant="label-hidden" />
                                <label for="applyBirthday">
                                    <abbr lightning-input_input="" title="required" class="slds-required">*</abbr>
                                    Date of Birth</label>
                                <lightning:inputField aura:id="applyBirthday" fieldName="Birthday__c" value="{!v.BirthDate}"
                                                      variant="label-hidden" />
                                <label for="applyMobile">
                                    <abbr lightning-input_input="" title="required" class="slds-required">*</abbr>
                                    Mobile</label>
                                <lightning:inputField aura:id="applyMobile" fieldName="Mobile__c" value="{!v.Mobile}"
                                                      onchange="{!c.phoneMasking}" variant="label-hidden" />
                                <lightning:inputField fieldName="Email__c" value="{!v.Email}" style="display: none;" />
